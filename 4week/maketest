# Target: The name of your executable file
TARGET = runMe

# C++ compiler
CXX = g++

# C++ compiler flags (optimize for speed)
CXXFLAGS = -O2

# Source files (cpp)
SRCS = test.cpp position.cpp velocity.cpp angle.cpp acceleration.cpp mainT.cpp

# Object files (created from source files)
OBJS = $(SRCS:.cpp=.o)

# Header files (include for compilation)
HDRS = position.h velocity.h testPosition.h testVelocity.h unitTest.h acceleration.h angle.h testAcceleration.h testAngle.h unitTest.h

# Rule to compile a source file (.cpp) into an object file (.o)
%.o: %.cpp $(HDRS)
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Rule to link object files into the final executable
$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(TARGET)

# Rule to clean up object files and the executable
clean:
	rm -f $(OBJS) $(TARGET)
